[
  {
    "rule_id": "SIEM-001",
    "rule_name": "Member Added to Domain Admins",
    "description": "Detects when any user is added to the high-privilege 'Domain Admins' (or similar) global group.",
    "level": "CRITICAL",
    "type": "match",
    "match": {
      "event_id": 4728
    }
  },
  {
    "rule_id": "SIEM-002",
    "rule_name": "Member Added to Local Administrators",
    "description": "Detects when any user is added to the high-privilege local 'Administrators' group.",
    "level": "HIGH",
    "type": "match",
    "match": {
      "event_id": 4732
    }
  },
  {
    "rule_id": "SIEM-003",
    "rule_name": "PowerShell Process Started",
    "description": "Detects the start of a PowerShell process, which is often used in attacks.",
    "level": "MEDIUM",
    "type": "match",
    "match": {
      "event_id": 4688,
      "process_name": "powershell.exe"
    }
  },
  {
    "rule_id": "SIEM-004",
    "rule_name": "Brute Force Logon Failure",
    "description": "Detects multiple failed logon attempts from a single IP address in a short time.",
    "level": "HIGH",
    "type": "threshold",
    "match": {
      "event_type": "FAILED_LOGIN"
    },
    "group_by": "source_ip",
    "threshold": 5,
    "timeframe_seconds": 60
  }
]

